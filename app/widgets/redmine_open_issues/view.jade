h2.redmine-title(style="display: inline-block;")
  | Open Tasks
  span.badge

#filters(style="display: inline-block; margin-left: 50px;")
  label(for="begin-date", style="display: inline-block; vertical-align: middle") Begin Date
  input#begin-date(type="date", style="margin-left: 10px", value="#{new Date().toISOString().split("T")[0]}")

table.table.table-bordered.redmine-table
  thead
    tr
      th.redmine-ticket-td.issue-number-column Ticket
      th Description
      th.redmine-status-td Status
      th Priority Level
  tbody
    tr
      td(colspan=4)
        .loading.large
          | Loading
          img(src="/images/ajax-loader.gif")
