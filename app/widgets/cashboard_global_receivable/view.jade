.pull-right
  i.icon-ok.refresh-ok.pull-left
  button.btn.btn-small.refresh-service('data-service'='cashboard_global_receivable', 'data-id'="#{service.id}")
    i.icon-retweet

h2
  | Receivable
  small  current

.row-fluid
  .span6
    a.accordian-toggle('data-toggle'="collapse", 'data-target'="#projects-#{service.id}", 'href'="#projects-#{service.id}")
      | Uninvoiced Projects List
    div.cashboard-billable-table-container.collapse('id'="projects-#{service.id}")
      table.table.table-bordered.cashboard-projects-table
        thead
          tr
            th Project
            th Uninvoiced Hours
            th Uninvoiced Expenses
        tbody
          tr
            td.data-row.right-align(colspan=3)
              .loading.large
                | Loading 
                img(src="/images/ajax-loader.gif")

    a.accordian-toggle('data-toggle'="collapse", 'data-target'="#unpaid-invoices-#{service.id}", 'href'="#unpaid-invoices-#{service.id}")
      | Unpaid Invoices List
    div.cashboard-billable-table-container.collapse('id'="unpaid-invoices-#{service.id}")
      table.table.table-bordered.cashboard-unpaid-invoices-table
        thead
          tr
            th Invoice Date
            th Invoice Number
            th Client
            th Amount
            th Balance
            th Sent
            th Due Date
        tbody
          tr
            td.data-row.right-align(colspan=7)
              .loading.large
                | Loading 
                img(src="/images/ajax-loader.gif")

    table.table.table-bordered.cashboard-table
      tr
        th Uninvoiced Time
        td.uninvoiced-time.right-align
          .loading
            | Loading 
            img(src="/images/ajax-loader-small.gif")
      tr
        th Uninvoiced Expenses
        td.uninvoiced-expenses.right-align
          .loading
            | Loading 
            img(src="/images/ajax-loader-small.gif")
      tr
        th Unpaid Invoices
        td.unpaid-invoices.right-align
          .loading
            | Loading 
            img(src="/images/ajax-loader-small.gif")
      tr
        th Unpaid Invoices (past-due)
        td.unpaid-due-invoices.right-align
          .loading
            | Loading 
            img(src="/images/ajax-loader-small.gif")

  .span6
    ul.nav.nav-tabs
      li.active
        a(href="#uninvoiced-content", 'data-toggle'="tab") Uninvoiced
      li
        a(href="#unpaid-content", 'data-toggle'="tab") Unpaid

    div.tab-content
      div.tab-pane.active#uninvoiced-content
        div.uninvoiced-by-project.cashboard-global-graph
          .loading.large
            | Loading 
            img(src="/images/ajax-loader.gif")

      div.tab-pane#unpaid-content
        div.unpaid-by-customer.cashboard-global-graph
          .loading.large
            | Loading 
            img(src="/images/ajax-loader.gif")
