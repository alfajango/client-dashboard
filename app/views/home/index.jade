extends ../layouts/application

block content
  h1= title
  if admin
    a(href="/admin") Admin
  p Welcome to #{title}

  h2 Issues
  table
    tr
      th Name
      th Status
      th % Done
    each issue in serviceData.redmine.issues
      tr
        td
          = issue.subject
        td
          = issue.status.name
        td
          = issue.done_ratio
