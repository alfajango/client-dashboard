extends ../layouts/application

block content
  h1 #{service ? "Update" : "Create"} Service for #{project.name}

  form.well.form-horizontal(action='/admin/clients/' + theClient.id + '/projects/' + project.id + '/services' + (service ? ('/' + service.id) : ""), method="POST")
    fieldset
      if service
        input(type="hidden", name="_method", value="PUT")
      .control-group
        label.control-label name
        .controls
          input(type="text", name="service[name]", value=(service ? service.name : ""))
      .control-group
        label.control-label url
        .controls
          input(type="text", name="service[url]", value=(service ? service.url : ""))
      .control-group
        label.control-label identifier
        .controls
          input(type="text", name="service[identifier]", value=(service ? service.identifier : ""))
      .control-group
        label.control-label user
        .controls
          input(type="text", name="service[user]", value=(service ? service.user : ""))
      .control-group
        label.control-label token
        .controls
          input(type="text", name="service[token]", value=(service ? service.token : ""))

      .control-group
        .controls
          input.btn(type="submit", value=(service ? "Update" : "Create"))
